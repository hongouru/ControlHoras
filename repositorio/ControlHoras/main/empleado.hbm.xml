<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
    <class name="org.controlhoras.entity.Empleado" table="empleados">
        
        <id name="idEmpleado" type="int" column="idEmp">
            <generator class="increment" />
        </id>
        
        <property name="nomEmpleado">
            <column name="nomEmp" />
           
        </property>
                          
    </class>
    
</hibernate-mapping>